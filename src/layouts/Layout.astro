<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: black;
		font-family: var(--font-geist-mono);
		overflow: hidden;
	}

	.stars {
		position: fixed;
		inset: 0;
		z-index: 0;
		pointer-events: none;
	}

	.stars::before,
	.stars::after {
		content: '';
		position: absolute;
		top: 50%;
		left: 50%;
		width: 2px;
		height: 2px;
		background: transparent;
		transform: translate(-50%, -50%);
		animation: twinkle 8s ease-in-out infinite;
	}

	.stars::before {
		box-shadow:
			6vw 10vh 0 0 #9bbde0,
			12vw 22vh 0 0 #b2cceb,
			18vw 6vh 0 0 #a7c2e4,
			24vw 35vh 0 0 #95b8dc,
			30vw 18vh 0 0 #b8d2ee,
			36vw 44vh 0 0 #8fb4d8,
			42vw 28vh 0 0 #a6c4e5,
			48vw 8vh 0 0 #9fc0e2,
			54vw 38vh 0 0 #b4cfea,
			60vw 22vh 0 0 #a0c1e3,
			66vw 50vh 0 0 #9abbe0,
			72vw 12vh 0 0 #b7d0ee,
			78vw 32vh 0 0 #8eb3d8,
			84vw 16vh 0 0 #a4c1e4,
			90vw 46vh 0 0 #9fbfe1,
			8vw 56vh 0 0 #b1cde9,
			20vw 70vh 0 0 #9abde1,
			34vw 62vh 0 0 #a8c6e6,
			50vw 74vh 0 0 #95b7db,
			64vw 66vh 0 0 #b0cbe9,
			76vw 82vh 0 0 #9dc0e3,
			88vw 72vh 0 0 #a6c4e6,
			14vw 90vh 0 0 #90b4da,
			28vw 86vh 0 0 #b6d0ee,
			44vw 92vh 0 0 #9abce0,
			58vw 88vh 0 0 #a3c3e6,
			70vw 96vh 0 0 #8fb3d8,
			82vw 90vh 0 0 #b2cdeb,
			94vw 84vh 0 0 #9ec1e3;
	}

	.stars::after {
		width: 1px;
		height: 1px;
		animation-duration: 12s;
		animation-delay: 2s;
		box-shadow:
			4vw 14vh 0 0 #7faad3,
			10vw 40vh 0 0 #8bb6dd,
			16vw 30vh 0 0 #93bce1,
			22vw 12vh 0 0 #7fa9d3,
			28vw 50vh 0 0 #8fb8de,
			34vw 18vh 0 0 #82aed8,
			40vw 58vh 0 0 #96bee2,
			46vw 26vh 0 0 #89b4dd,
			52vw 46vh 0 0 #83b0da,
			58vw 12vh 0 0 #91b9df,
			64vw 30vh 0 0 #86b2db,
			70vw 54vh 0 0 #9ac0e3,
			76vw 20vh 0 0 #80abd5,
			82vw 42vh 0 0 #8fb8de,
			88vw 28vh 0 0 #7da7d2,
			94vw 52vh 0 0 #96bee2,
			6vw 74vh 0 0 #8bb6dd,
			18vw 64vh 0 0 #7faad4,
			32vw 78vh 0 0 #93bce1,
			46vw 70vh 0 0 #81aed8,
			60vw 82vh 0 0 #8cb7dd,
			72vw 76vh 0 0 #7aa6d1,
			86vw 88vh 0 0 #95bde2,
			96vw 68vh 0 0 #83b0da;
	}

	@keyframes twinkle {
		0%,
		100% {
			opacity: 0.55;
		}
		50% {
			opacity: 1;
		}
	}
</style>
